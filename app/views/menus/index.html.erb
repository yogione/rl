<h1>Listing menus</h1>

<table class="zebra-striped">
  <tr>
    <th>Item</th>
    <th>Description</th>
    <th>&nbsp</th>
    <th>Price</th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= image_tag( menu.photo_file_name, :size=>"80x80") %><br/>
    <%= menu.title %></td>
    <td><%= menu.description %> </td>
     <!--<td><%=button_tag "Order", :class=>"btn primary large" %></td> -->
    <% if user_signed_in? %>
    <td> <%= button_to ' Order ', orders_path(menu_id: menu, user_id: current_user), :class=>"btn primary large" %> </td>
    <% else %>
         <td> <%= button_to ' Login to Order ', root_path(menu_id: menu, user_id: current_user), :class=>"btn primary large" %> </td>
    <% end %>
    <td><%= menu.price %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Menu', new_menu_path %>
